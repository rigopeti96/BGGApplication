<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.beerdetails.BeerDetailsFragment">

    <TextView
        android:id="@+id/tvBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/back"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBeerTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/beer_tagline"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBackButton" />

    <TextView
        android:id="@+id/tvBeerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="@string/beer_name_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBeerTagline" />

    <TextView
        android:id="@+id/tvBeerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tvBeerTagline" />

    <TextView
        android:id="@+id/tvBeerYeastLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yeast"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerName" />

    <TextView
        android:id="@+id/tvBeerYeast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/tvBeerName" />

    <TextView
        android:id="@+id/tvBeerMaltLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="@string/malt_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerYeastLabel" />

    <TextView
        android:id="@+id/tvBeerMalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="2"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerMaltLabel" />

    <TextView
        android:id="@+id/tvBeerHopsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_hops"
        android:layout_margin="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerMalt" />

    <TextView
        android:id="@+id/tvBeerHops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="2"
        android:maxLines="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerHopsLabel" />

    <TextView
        android:id="@+id/tvBeerFoodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_foods"
        android:layout_margin="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerHops" />

    <TextView
        android:id="@+id/tvBeerFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="2"
        android:maxLines="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerFoodLabel" />

    <TextView
        android:id="@+id/tvBeerDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvBeerFood" />

    <TextView
        android:id="@+id/tvBeerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeerDescriptionLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="132dp" />

    <ImageView
        android:id="@+id/ivBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/beer"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvBeerAbvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abv"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/ivBeer"
        app:layout_constraintTop_toTopOf="@id/ivBeer" />

    <TextView
        android:id="@+id/tvBeerAbv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvBeerAbvLabel"
        app:layout_constraintTop_toTopOf="@id/ivBeer" />

    <TextView
        android:id="@+id/tvBeerIbuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ibu"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/ivBeer"
        app:layout_constraintTop_toBottomOf="@id/tvBeerAbvLabel" />

    <TextView
        android:id="@+id/tvBeerIbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvBeerAbvLabel"
        app:layout_constraintTop_toBottomOf="@id/tvBeerAbv" />


</androidx.constraintlayout.widget.ConstraintLayout>