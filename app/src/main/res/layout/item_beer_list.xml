<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clBeerLayout"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/ivBeerIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_beer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBeerListTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvBeerListTagline"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBeerIcon"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBeerListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvBeerListName"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/ivBeerIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvBeerListTagline"/>

    <TextView
        android:id="@+id/tvBeerListAbv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvBeerListAbv"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/ivBeerIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvBeerListName"/>



</androidx.constraintlayout.widget.ConstraintLayout>